    <record id="each_league_payment_menu" model="ir.actions.act_window">
        <field name="name">Each League Menu</field>
        <field name="res_model">each.league.payment</field>
        <field name="view_mode">tree,pivot</field>
        <field name="search_view_id" ref="each_league_payment_search"/>
        <field name="view_id" ref="each_league_payment_tree_report"/>
        <field name="domain">['|', '|', '|', '|', ('wereda_id.branch_manager', '=', uid), ('subcity_id.parent_manager.id', '=', uid), ('subcity_id.city_id.city_manager', 'in', [uid]), ('subcity_id.city_id.transfer_handler', '=', uid), ('subcity_id.city_id.responsible_id.system_admin', '=', uid)]</field>
    </record>

    <record id="membership_payment_tree" model="ir.ui.view">
        <field name="name">Membership Payment Tree</field>
        <field name="model">membership.payment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id" invisible="1"/>
                <field name="year"/>
                <field name="month"/>
                <field name="main_office"/>
                <field name="wereda_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="membership_payment_form" model="ir.ui.view">
        <field name="name">Membership Payment Form</field>
        <field name="model">membership.payment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="draft_button" string="Go Back To Draft" states="submit" type="object" class="oe_highlight"/>
                    <button name="submit_button" string="Submit" type="object" states="draft" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submit,registered"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <field name="x_css" invisible="1"/>
                    <group>
                        <group>
                            <field name="user_id" invisible="1"/>
                            <field name="year" attrs="{'readonly': [('state', '=', 'submit')]}"/>
                            <field name="month" attrs="{'readonly': [('state', '=', 'submit')]}"/>
                            <field name="payment_for_league_member" string="League or Member" attrs="{'invisible': [('payment_for_supporter', '=', True)], 'readonly': [('state', '=', 'submit')]}"/>
                            <field name="payment_for_supporter" string="Other Payments" attrs="{'readonly': [('state', '=', 'submit')]}"/>
                        </group>
                        <group>
                            <field name="subcity_id" attrs="{'readonly': [('state', '=', 'submit')]}"/>
                            <field name="wereda_id" attrs="{'readonly': [('state', '=', 'submit')]}"/>
                            <field name="main_office" attrs="{'invisible': [('payment_for_supporter', '=', True)], 'readonly': [('state', '=', 'submit')]}" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="amount" required="1" attrs="{'readonly': [('state', '=', 'submit')]}"/>
                            <button name="print_supporter_payslip" string="Pay Slip" class="btn-info" type="object" icon="fa-download" attrs="{'invisible': ['|', ('state', '!=', 'submit'), ('payment_for_supporter', '=', False)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Members" name="members_ids" attrs="{'invisible': ['|', ('payment_for_league_member', '=', 'league'), ('payment_for_supporter', '=', True)], 'readonly': [('state', '=', 'submit')]}">
                            <field name="member_ids" attrs="{'readonly': [('state', '=', 'submit')]}"/>
                        </page>
                        <page string="Supporters" name="supporter_ids" attrs="{'invisible': [('payment_for_supporter', '=', False)], 'readonly': [('state', '=', 'submit')]}">
                            <group>
                                <group>
                                    <field name="donor_supporter" string="Are you registered as a Donor?"/>
                                </group>
                                <group>
                                    <field name="supporter_ids" attrs="{'invisible': [('donor_supporter', '=', 'donor')], 'readonly': [('state', '=', 'submit')]}"/>
                                    <field name="donors_id" attrs="{'invisible': [('donor_supporter', '=', 'supporter')], 'readonly': [('state', '=', 'submit')]}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Leagues" name="league_ids" attrs="{'invisible': ['|', ('payment_for_league_member', '=', 'member'), ('payment_for_supporter', '=', True)], 'readonly': [('state', '=', 'submit')]}">
                            <field name="league_ids" attrs="{'readonly': [('state', '=', 'submit')]}"/>
                            <!-- <group>
                                <field name="total_estimated_for_leagues" widget="monetary" force_save="1" attrs="{'invisible': [('payment_for_supporter', '=', True)]}"/>
                                <field name="total_paid_for_leagues" widget="monetary" force_save="1" attrs="{'invisible': [('payment_for_supporter', '=', True)]}"/>
                                <field name="total_remaining_for_leagues" widget="monetary" force_save="1" attrs="{'invisible': [('payment_for_supporter', '=', True)]}"/>
                                <field name="total_id_payments_leagues" widget="monetary" force_save="1" attrs="{'invisible': [('payment_for_supporter', '=', True)]}"/>
                            </group> -->
                        </page>
                    </notebook>
                    <group class="oe_subtotal_footer oe_right" attrs="{'invisible': ['|', ('payment_for_league_member', '=', 'league'), ('payment_for_supporter', '=', True)]}">
                        <field name="total_estimated_for_members" widget="monetary" force_save="1" attrs="{'invisible': ['|', ('payment_for_league_member', '=', 'league'), ('payment_for_supporter', '=', True)]}"/>
                        <field name="total_paid_for_members" widget="monetary" force_save="1" attrs="{'invisible': ['|', ('payment_for_league_member', '=', 'league'), ('payment_for_supporter', '=', True)]}"/>
                        <field name="total_id_payments_members" widget="monetary" force_save="1" attrs="{'invisible': ['|', ('payment_for_league_member', '=', 'league'), ('payment_for_supporter', '=', True)]}"/>
                        <div class="oe_subtotal_footer_separator oe_inline">
                            <!-- <label for="total_remaining_for_members" attrs="{'invisible': ['|', ('payment_for_league_member', '=', 'league'), ('payment_for_supporter', '=', True)]}"/> -->
                        </div>
                        <field name="total_remaining_for_members" widget="monetary" force_save="1" attrs="{'invisible': ['|', ('payment_for_league_member', '=', 'league'), ('payment_for_supporter', '=', True)]}"/>
                    </group>
                    <group class="oe_subtotal_footer oe_right" attrs="{'invisible': ['|', ('payment_for_league_member', '=', 'member'), ('payment_for_supporter', '=', True)]}">
                        <field name="total_estimated_for_leagues" widget="monetary" force_save="1" attrs="{'invisible': ['|', ('payment_for_league_member', '=', 'member'), ('payment_for_supporter', '=', True)]}"/>
                        <field name="total_paid_for_leagues" widget="monetary" force_save="1" attrs="{'invisible': ['|', ('payment_for_league_member', '=', 'member'), ('payment_for_supporter', '=', True)]}"/>
                        <field name="total_id_payments_leagues" widget="monetary" force_save="1" attrs="{'invisible': ['|', ('payment_for_league_member', '=', 'member'), ('payment_for_supporter', '=', True)]}"/>
                        <div class="oe_subtotal_footer_separator oe_inline">
                            <!-- <label for="total_remaining_for_leagues" attrs="{'invisible': ['|', ('payment_for_league_member', '=', 'member'), ('payment_for_supporter', '=', True)]}"/> -->
                        </div>
                        <field name="total_remaining_for_leagues" widget="monetary" force_save="1" attrs="{'invisible': ['|', ('payment_for_league_member', '=', 'member'), ('payment_for_supporter', '=', True)]}"/>
                    </group>
                    <group class="oe_subtotal_footer oe_right" attrs="{'invisible': [('payment_for_supporter', '=', False)]}">
                        <!-- <field name="total_estimated" widget="monetary" force_save="1" attrs="{'invisible': [('payment_for_supporter', '=', True)]}"/> -->
                        <field name="total_paid" widget="monetary" force_save="1"/>
                        <!-- <div class="oe_subtotal_footer_separator oe_inline"> -->
                            <!-- <label for="total_remaining" attrs="{'invisible': [('payment_for_supporter', '=', True)]}"/> -->
                        <!-- </div> -->
                        <!-- <field name="total_remaining" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" force_save="1" attrs="{'invisible': [('payment_for_supporter', '=', True)]}"/> -->
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

