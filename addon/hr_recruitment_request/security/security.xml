<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_recruitment_request">
        <field name="name">recruitment Request</field>
        <field name="description">recruitments Request Position</field>
        <field name="sequence">45</field>
    </record>

    <record id="group_request_recruitment" model="res.groups">
        <field name="name">Requester</field>
        <field name="category_id" ref="module_category_recruitment_request"/>
    </record>

    <record id="group_recruitment_hr_approval" model="res.groups">
        <field name="name">Hr Approval</field>
        <field name="category_id" ref="module_category_recruitment_request" />
    </record>
    
    <record id="group_apply" model="res.groups">
        <field name="name">Applier</field>
        <field name="category_id" ref="module_category_recruitment_request" />
    </record>


    <data noupdate="1">

    <record id="recruitment_request_hr_rule" model="ir.rule">
        <field name="name">Department requester</field>
        <field ref="model_hr_recruitment_request" name="model_id"/>
        <field name="domain_force">[('state','!=','closed')]</field>
        <field name="groups" eval="[(4, ref('hr_recruitment_request.group_request_recruitment'))]"/>
    </record>
    <record id="recruitment_request_department_rule" model="ir.rule">
        <field name="name">hr approver</field>
        <field ref="model_hr_recruitment_request" name="model_id"/>
        <field name="groups" eval="[(4, ref('hr_recruitment_request.group_recruitment_hr_approval'))]"/>
    </record>
    <record id="recruitment_request_department_rule" model="ir.rule">
        <field name="name">Applier rule</field>
        <field ref="model_hr_recruitment_request" name="model_id"/>
        <field name="domain_force">[('state','=','in_internal_recruitment')]</field>
        <field name="groups" eval="[(4, ref('hr_recruitment_request.group_apply'))]"/>
    </record>

     <record id="job_application_applier_rule" model="ir.rule">
        <field name="name">Applier rule for Applications</field>
        <field ref="model_custom_job" name="model_id"/>
        <field name="domain_force">[('employee_id','=',user.employee_id.id)]</field>
        <field name="groups" eval="[(4, ref('hr_recruitment_request.group_apply'))]"/>
    </record>
    
    </data>
</odoo>